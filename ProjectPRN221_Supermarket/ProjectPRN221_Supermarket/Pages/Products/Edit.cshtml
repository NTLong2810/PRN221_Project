@page
@model ProjectPRN221_Supermarket.Pages.Products.EditModel
@{
    ViewData["Title"] = "Edit Product";
}

<h2>Edit Product</h2>

<form method="post">
    <input type="hidden" asp-for="Product.ProductId" />
    
    <div class="form-group">
        <label asp-for="Product.ProductName" class="control-label"></label>
        <input asp-for="Product.ProductName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Product.UnitPrice" class="control-label"></label>
        <input asp-for="Product.UnitPrice" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Product.QuantityInStock" class="control-label"></label>
        <input asp-for="Product.QuantityInStock" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Product.ExpirationDate" class="control-label"></label>
        <input asp-for="Product.ExpirationDate" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="Product.Category" class="control-label"></label>
        <select asp-for="Product.Category" class="form-control">
            <option value="">Select Category</option>
            @foreach (var category in Model.Categories)
            {
                <option value="@category.CategoryId">@category.CategoryName</option>
            }
        </select>
    </div>
    
    <button type="submit" class="btn btn-primary">Update</button>
</form>